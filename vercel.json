{
  "version": 2,
  "builds": [
    {
      "src": "client/vite.config.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "memory": 2048
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "server/index.ts"
    }
  ]
}
